@model IEnumerable<WebMvc.Models.LoopViewModel>
@{
    ViewData["Title"] = "Loop List";
}
<h2>Loop List</h2>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a asp-action="LoopEdit" asp-route-id="@item.Id">Edit</a> | <a asp-action="LoopDeleteModel"
                        asp-route-id="@item.Id">Delete</a>
                </td>

            </tr>
        }
    </tbody>
</table>
<a asp-action="LoopCreate">Create a new Loop</a>
